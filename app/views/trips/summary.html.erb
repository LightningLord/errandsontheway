<div class="row">
  <div class="small-12 large-12 columns">
    <h1>Here's your trip!</h1>
    <%= render "headerblock" %>
    <h3>Trip Duration Without Errands: <%= @trip.format_original_duration %></h3>
    <h3>Trip Duration With Errands: <%= @trip.format_ending_duration %></h3>
  </div>  
</div>

<div class="row">

<h4>Your errands on the way:</h4>
<ol>
  <% @trip.errands.each do |errand| %>
    <li><%= errand.business_name %></li>
  <% end %>
</ol>
</div>

<p>This trip link is yours! Bookmark it, share it, save it.</p>

<%= render "start_over_link" %>
<br>
<a id="directions">Show Directions</a>
<div id="map-canvas"></div>
<div id="directions-panel"></div>

<script type="text/javascript">
  var trip = <%= raw @trip.to_json.gsub('/', '\/') %>;
  var errands = <%= raw @trip.errands.to_json.gsub('/', '\/') %>;
  renderMap(trip, errands, true);
  activateDirectionsToggle();
</script>
